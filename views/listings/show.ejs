<% layout("layouts/bolierplate.ejs") %>
<h3 class="mb-3"><%= listing.title %></h3>
<div class="card border-0">
  <img 
    src="<%= listing.image && listing.image.url ? listing.image.url : listing.image %>" 
    srcset="<%= (listing.image && listing.image.url ? listing.image.url : listing.image) %>?w=800 800w, <%= (listing.image && listing.image.url ? listing.image.url : listing.image) %>?w=1200 1200w, <%= (listing.image && listing.image.url ? listing.image.url : listing.image) %>?w=1600 1600w"
    sizes="(max-width: 768px) 100vw, 80vw"
    class="listing-hero"
    alt="listing_image">
  <div class="card-body p-3">
    <p class="card-text line-clamp-2"><%= listing.description %></p>
    <p class="mb-1"><span class="price">&#8377; <%= (listing.price && listing.price.toLocaleString) ? listing.price.toLocaleString('en-IN') : listing.price %></span> <span class="text-muted">/day</span></p>
    <p class="text-muted small mb-0"><%= listing.location %>, <%= listing.country %></p>
  </div>
</div>
<div class="mt-3 d-flex align-items-center gap-2">
  <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary btn-sm">Edit</a>
  <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
  </form>
</div>
<section class="mt-4">
  <form method="POST" action="/listings/<%= listing._id %>/reviews">
    <label for="rating">Rating</label>
    <input id="rating" type="number" name="review[rating]" min="1" max="5" value="5" class="form-control" />
    <div class="mt-2">
      <label for="comment">Comment</label>
      <textarea id="comment" name="review[comment]" class="form-control" rows="3"></textarea>
    </div>
    <button class="btn btn-primary btn-sm mt-2" type="submit">Submit</button>
  </form>
  <h4>All Reviews</h4>
  <% for(let review of listing.reviews) { %>
    <li><%= review.comment %> <%= review.rating %> stars</li>
  <% } %>
  <p><b>All reviews:</b></p>
  <% for(let review of listing.reviews) { %>
    <div class="card mb-2 border-0 shadow-sm rounded-3 p-2 bg-light row">
      <div class="card-body">
        <h5 class="card-title"><%= review.rating %> stars</h5>
        <p class="card-text"><%= review.comment %></p>
        <p class="card-text"></p>
        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
          <button class="btn btn-danger btn-sm" type="submit">Delete</button>
        </form>
      </div>
    </div>
  <% } %>

</section>